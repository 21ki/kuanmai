@{
    ViewBag.Title = "销售退库单查询";
}

<script>

    var cateMgr = new KMJXCProductManager();
    var buyMgr = new KMJXCBuyManager();
    var stockMgr = new KMJXCStockManager();
    var saleMgr = new KMJXCSaleManager();
    var $grid = null; 
    var $form = null;
    var $searchform = null;
    $(function () {
        $form = $('#editnewform');
        var obj = {
            width: 830, height: 600, title: "销售退货单列表", flexHeight: true, sortable: false, selectionModel: { mode: 'range' }, scrollModel: { pace: 'fast', horizontal: true },
            rowSelect: function (event, obj) {               
                var pdtId = obj.data[obj.rowIndxPage]['ID'];               
            }
        };

        obj.colModel = [                                           
                        
                        { title: "订单号", width: 150, dataType: "string", dataIndx: "Sale.ID", editable: false },
                        { title: "商城订单号", width: 150, dataType: "string", dataIndx: "Sale.Mall_Trade_ID", editable: false },

                        {
                            title: "店铺", width: 120, dataType: "string", dataIndx: "Shop.Title", editable: false,
                            render: function (ui) {                               
                                if (ui.rowData["FromMainShop"] == "true") {
                                    return ui.rowData["Shop"].Title + " 主店铺";
                                } else if (ui.rowData["FromChildShop"] == "true") {
                                    return ui.rowData["Shop"].Title + " 子店铺";
                                } else {                                   
                                    return ui.rowData["Shop"].Title;
                                }
                            }
                        },                       
                        { title: "总金额", width: 150, dataType: "string", dataIndx: "Amount", editable: false },
                        { title: "买家", width: 150, dataType: "string", dataIndx: "Buyer.Mall_Name", editable: false },
                        { title: "买家电话", width: 150, dataType: "string", dataIndx: "Buyer.Phone", editable: false },
                        { title: "买家地址", width: 150, dataType: "string", dataIndx: "Buyer.Address", editable: false },
                      
        ];

        obj.dataModel = {
            location: "remote",
            sorting: "remote",
            paging: "remote",
            dataType: "JSON",
            method: "POST",
            curPage: 1,
            rPP: 30,
            sortIndx: 2,
            sortDir: "up",
            rPPOptions: [40, 50, 60, 100],
            getUrl: function (prgrid) {
                var sale_id = $($searchform).find("#sale_id").val();
                var sdate = $($searchform).find("#back_sdate").val();
                var edate = $($searchform).find("#back_edate").val();
                return {
                    url: "/api/Sale/SearchSales", data: "page="+this.curPage+"&pageSize="+this.rPP+"&sale_id="+sale_id+"&sdate="+sdate+"&edate="+edate
                };
            },
            getData: function (dataJSON) {                
                return { curPage: dataJSON.curPage, totalRecords: dataJSON.totalRecords, data: dataJSON.data };
            }
        };

        obj.cellSave = function (event, ui) {

        }

       

        $("#saleTable").on("pqgridrender", function (evt, obj) {
            var $toolbar = $("<div class='pq-grid-toolbar pq-grid-toolbar-search'></div>").appendTo($(".pq-grid-top", this));
            //var $menubar = $("<div class='pq-grid-toolbar pq-grid-toolbar-crud'></div>").appendTo($(".pq-grid-top", this)); 
            $searchform = $("<form id=\"pdt_search_form\"></form>").appendTo($toolbar);
            var $srow = $("<div class=\"row\"></div>").appendTo($searchform);
            $("<label class=\"label1\">订单号:</label>").appendTo($srow);
            $("<input id=\"sale_id\" title='订单编号' type='text' class='W_input' style='height:22px;'/>").appendTo($srow).keyup(function (evt) {

            });
            $("<label class=\"label1\">商城订单号:</label>").appendTo($srow);
            $("<input id=\"trade_id\" title='商城订单编号' type='text' class='W_input' style='height:22px;'/>").appendTo($srow).keyup(function (evt) {

            });
            var $srow2 = $("<div class=\"row\"></div>").appendTo($searchform);
            $("<label class=\"label1 searchField\">订单日期范围:</label>").appendTo($srow2);
            $("<input id=\"back_sdate\" title='开始日期' type='text' class='W_input' style='height:22px;'/>").appendTo($srow2).datepicker(
                {
                    currentText: "Now",
                    dateFormat: "yy-mm-dd",
                    showMonthAfterYear: true,
                    changeMonth: true,
                    changeYear: true,
                    buttonImageOnly: true,
                });
            $("<input id=\"back_edate\" title='结束日期' type='text' class='W_input searchField' style='height:22px;'/>").appendTo($srow2).datepicker(
                {
                    currentText: "Now",
                    dateFormat: "yy-mm-dd",
                    showMonthAfterYear: true,
                    changeMonth: true,
                    changeYear: true,
                    buttonImageOnly: true,
                });
            $("<span style='height:24px;line-height:24px;'>搜索</span>")
                   .appendTo($srow2)
                   .button({ text: true }).bind("click", function (evt) {
                       $grid.pqGrid("refreshDataAndView");
                   });
            $("<span style='height:24px;line-height:24px;'>同步</span>")
                   .appendTo($srow2)
                   .button({ text: true }).bind("click", function (evt) {
                       saleMgr.SyncMallTrade({}, function (res) {

                       });
                   });
        });

        $grid = $("#saleTable").pqGrid(obj);


        function getRowIndx() {
            var arr = $grid.pqGrid("selection", { type: 'row', method: 'getSelection' });
            if (arr && arr.length > 0) {
                var rowIndx = arr[0].rowIndx;

                //if (rowIndx != null && colIndx == null) {
                return rowIndx;
            }
            else {
                alert("请选择一行");
                return null;
            }
        }
    });

</script>

<div class="normallist">
    <div id="saleTable"></div>
    <form id="editnewform">
        <div id="popup_editnewdiv">

        </div>
    </form>
    
</div>


