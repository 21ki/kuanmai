<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - 宽迈流量宝</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/modernizr")
    @{ 
        string actionName = ViewContext.RouteData.Values["action"].ToString();
        string controllerName = ViewContext.RouteData.Values["controller"].ToString();
    }
    <link href="@Url.Content("~/Content/Gridmvc.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/gridmvc.min.js")" type="text/javascript"></script>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("宽迈流量宝", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("主页", "Index", "Home")</li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">产品 <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="#">流量直充</a></li>
                            <li><a href="#">流量代理</a></li>
                            <li><a href="#">微信扫码</a></li>
                        </ul>
                    </li>
                    <li>@Html.ActionLink("关于我们", "About", "Home")</li>
                    <li>@Html.ActionLink("联系我们", "Contact", "Home")</li>



                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        <div class="agentContainer">
            <div class="agentLeftNav">
                <div class="menu">
                    <div class="list-group">
                        <a href="/Admin/Index" class="list-group-item @{if(controllerName=="Admin" && (string.IsNullOrEmpty(actionName) || actionName=="Index")){ @Html.Raw("active"); }
                            }">账户信息</a>
                        <a href="/Admin/Resources" class="list-group-item @{if(controllerName=="Admin" &&
                                (string.IsNullOrEmpty(actionName) || actionName=="Resources" || actionName=="CreateResource"
                                || actionName=="EditResource" || actionName=="ViewResource" || actionName=="ViewResourceTaoCan"
                                || actionName=="CreateResourceTaocan" || actionName=="UpdateResourceTaocan"))
                            { @Html.Raw("active"); }
                            }">资源管理</a>
                        <a href="/Admin/Agencies" class="list-group-item @{if(controllerName=="Admin" && (string.IsNullOrEmpty(actionName) || actionName=="Agencies" || actionName=="CreateAgency"
                              || actionName == "EditAgency" || actionName == "UpdateAgency" || actionName=="CreateAgentRoute" || actionName=="AgentRoutes" || actionName == "EditAgentRuote"))
                            { @Html.Raw("active"); }
                            }">代理商管理</a>
                        
                        <a href="/Admin/ChargeHistory" class="list-group-item  @{if(controllerName=="Admin" && (string.IsNullOrEmpty(actionName) || actionName== "ChargeHistory")){ @Html.Raw("active"); }
                            }">流量充值查询</a>

                        <a href="/Admin/ChargeQueue" class="list-group-item @{if(controllerName=="Admin" && (string.IsNullOrEmpty(actionName) || actionName== "ChargeQueue")){ @Html.Raw("active"); }
                            }">流量待充值列队</a>
                       
                        <a href="/Admin/Administrators" class="list-group-item @{if (controllerName == "Admin" && (string.IsNullOrEmpty(actionName) || actionName == "Administrators")                                
                                || actionName=="CreateAdmin" || actionName=="AddAdmin" || actionName=="AdminPermissions") { @Html.Raw("active") ; } }">管理员管理</a>

                        <a href="/Admin/ChangePassword" class="list-group-item  @{if(controllerName=="Admin" && (string.IsNullOrEmpty(actionName) || actionName=="ChangePassword")){ @Html.Raw("active"); }
                            }">修改密码</a>

                    </div>
                </div>
            </div>
            <div class="agentRightNav">
                @RenderBody()
            </div>
        </div>
        <hr />
    </div>
    <div class="container body-content">
        <footer>
            <p>&copy; @DateTime.Now.Year - 宽迈流量宝</p>
        </footer>
    </div>


    @RenderSection("scripts", required: false)
</body>
</html>
