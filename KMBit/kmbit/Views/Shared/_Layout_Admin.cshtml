<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - 宽迈流量宝</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/modernizr")   
    @Scripts.Render("~/bundles/jqPlot")
    @Scripts.Render("~/bundles/sitejs")
    @{ 
        string actionName = ViewContext.RouteData.Values["action"].ToString();
        string controllerName = ViewContext.RouteData.Values["controller"].ToString();
    }
    <link href="@Url.Content("~/Content/Gridmvc.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/gridmvc.min.js")" type="text/javascript"></script>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
</head>
<body>
    @Html.Partial("_headPartial")
    <div class="container body-content">
        <div class="agentContainer">
            <div class="agentLeftNav">
                <div class="menu">
                    <div class="list-group">
                        <a href="/Admin/Index" class="list-group-item @{if(controllerName=="Admin" && (string.IsNullOrEmpty(actionName) || actionName=="Index")){ @Html.Raw("active"); }
                            }">账户信息</a>
                        <a href="/Admin/Resources" class="list-group-item @{if(controllerName=="Admin" &&
                                (string.IsNullOrEmpty(actionName) || actionName=="Resources" || actionName=="CreateResource"
                                || actionName=="EditResource" || actionName=="ViewResource" || actionName=="ViewResourceTaoCan"
                                || actionName=="CreateResourceTaocan" || actionName=="UpdateResourceTaocan" || actionName == "ConfigureResource"))
                            { @Html.Raw("active"); }
                            }">资源管理</a>
                        <a href="/Admin/Agencies" class="list-group-item @{if(controllerName=="Admin" && (string.IsNullOrEmpty(actionName) || actionName=="Agencies" || actionName=="CreateAgency"
                              || actionName == "EditAgency" || actionName == "UpdateAgency" || actionName=="CreateAgentRoute" || actionName=="AgentRoutes" || actionName == "EditAgentRuote" ))
                            { @Html.Raw("active"); }
                            }">代理商管理</a>
                        <a href="/Admin/Charge" class="list-group-item @{if(controllerName=="Admin" && (string.IsNullOrEmpty(actionName) || actionName=="Charge")){ @Html.Raw("active"); }
                            }">手工充值流量</a>
                        <a href="/Admin/ChargeOrders" class="list-group-item  @{if(controllerName=="Admin" && (string.IsNullOrEmpty(actionName) || actionName== "ChargeOrders" || actionName=="OrderDetail")){ @Html.Raw("active"); }
                            }">充值记录查询</a>

                        <a href="/Admin/Reports" class="list-group-item  @{if(controllerName=="Admin" && (string.IsNullOrEmpty(actionName) || actionName== "Reports")){ @Html.Raw("active"); }
                            }">流量充值报表</a>

                        @*<a href="/Admin/ChargeQueue" class="list-group-item @{if(controllerName=="Admin" && (string.IsNullOrEmpty(actionName) || actionName== "ChargeQueue")){ @Html.Raw("active"); }
                            }">流量待充值列队</a>*@
                       
                        <a href="/Admin/Administrators" class="list-group-item @{if (controllerName == "Admin" && (string.IsNullOrEmpty(actionName) || actionName == "Administrators")                                
                                || actionName=="CreateAdmin" || actionName=="AddAdmin" || actionName=="AdminPermissions") { @Html.Raw("active") ; } }">管理员管理</a>

                        <a href="/Admin/ChangePassword" class="list-group-item  @{if(controllerName=="Admin" && (string.IsNullOrEmpty(actionName) || actionName=="ChangePassword")){ @Html.Raw("active"); }
                            }">修改密码</a>

                    </div>
                </div>
            </div>
            <div class="agentRightNav">
                @RenderBody()
            </div>
        </div>
        <hr />
    </div>
    <div class="container body-content">
        <footer>
            <p>&copy; @DateTime.Now.Year - 宽迈流量宝</p>
        </footer>
    </div>


    @RenderSection("scripts", required: false)
</body>
</html>
