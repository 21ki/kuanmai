<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - 宽迈流量宝</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/sitejs")
    @Scripts.Render("~/bundles/jqPlot")
    @{ 
        string controllerName= ViewContext.RouteData.Values["controller"].ToString();
        string actionName = ViewContext.RouteData.Values["action"].ToString();
        if (string.IsNullOrEmpty(actionName)) {
            actionName = "Index";
        }
    }
    <link href="@Url.Content("~/Content/Gridmvc.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/gridmvc.min.js")" type="text/javascript"></script>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
</head>
<body>
   @Html.Partial("_headPartial")
    <div class="container body-content">
        <div class="agentContainer">
            <div class="agentLeftNav">
                <div class="menu">
                    <div class="list-group">
                        <a href="/Agent/Index" class="list-group-item @{if(controllerName=="Agent" && (string.IsNullOrEmpty(actionName) || actionName=="Index")){ @Html.Raw("active"); }
                            }">账户信息</a>
                        <a href="/Agent/Taocan" class="list-group-item @{if(controllerName=="Agent" && (string.IsNullOrEmpty(actionName) || actionName=="Taocan" || actionName=="EditTaocan")){ @Html.Raw("active"); }
                            }">套餐管理</a>
                        <a href="/Agent/Charge" class="list-group-item @{if(controllerName=="Agent" && (string.IsNullOrEmpty(actionName) || actionName=="Charge")){ @Html.Raw("active"); }
                            }">流量充值</a>
                        <a href="/Agent/ChargeOrders" class="list-group-item @{if(controllerName=="Agent" && (string.IsNullOrEmpty(actionName) || actionName=="ChargeOrders")){ @Html.Raw("active"); }
                            }">流量充值查询</a>
                        <a href="/Agent/ChargeReports" class="list-group-item @{if(controllerName=="Agent" && (string.IsNullOrEmpty(actionName) || actionName=="ChargeReports")){ @Html.Raw("active"); }
                            }">流量充值报表</a>
                        <a href="/Agent/PayHistories" class="list-group-item @{if(controllerName=="Agent" && (string.IsNullOrEmpty(actionName) || actionName=="PayHistories")){ @Html.Raw("active"); }
                            }">账户充值记录</a>
                        <a href="/Agent/ChangePassword" class="list-group-item  @{if(controllerName=="Agent" && (string.IsNullOrEmpty(actionName) || actionName=="ChangePassword")){ @Html.Raw("active"); }
                            }">修改密码</a>
                    </div>
                </div>
            </div>
            <div class="agentRightNav">
                @RenderBody()
            </div>
        </div>     
        <hr />        
    </div>
    <div class="container body-content">
        <footer>
            <p>&copy; @DateTime.Now.Year - 宽迈流量宝</p>
        </footer>
    </div>
      
        @RenderSection("scripts", required: false)
</body>
</html>
