<div>
@Html.Grid(Model.OrderGrid).Columns(columns =>
{
    columns.Add(c => c.ReseouceName).Titled("资源").Filterable(true).SetWidth("15%");
    columns.Add(c => c.AgentEmail).Titled("代理商").Filterable(true).SetWidth("10%").RenderValueAs(o => o.AgentEmail != null ? o.AgentEmail : "");
    columns.Add(c => c.MobilePhone).Titled("手机号").Filterable(true).SetWidth("10%");
    columns.Add(c => c.PlatformCostPrice).Titled("成本价").Filterable(true).SetWidth("8%");
    columns.Add(c => c.SalePrice).Titled("售价").Filterable(true).SetWidth("5%");
    columns.Add(c => c.PurchasePrice).Titled("代理价").Filterable(true).SetWidth("8%");
    columns.Add(c => c.PlatformSalePrice).Titled("代理售价").Filterable(true).SetWidth("10%");
    columns.Add(c => c.CreatedTime).Titled("时间").Filterable(true).SetWidth("10%").RenderValueAs(o => o.CreatedTime > 0 ? KMBit.Util.DateTimeUtil.ConvertToDateTime(o.CreatedTime).ToString("yyyy-H-mm") : "");
    columns.Add(c => c.StatusText).Titled("状态").Filterable(true).SetWidth("10%").RenderValueAs(o => o.StatusText != null ? o.StatusText : "");
    columns.Add()
  .Encoded(false)
  .Sanitized(false)
  .SetWidth("5%")
  .RenderValueAs(o => Html.Raw("<a href=\"javascript:void(0);\" onclick=\"orderDetail(" + o.Id + ")\">明细</a>"));
}).Sortable(true)
</div>

