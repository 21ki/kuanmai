<script>
    function orderDetail(orderId) {
        $.get(
            "/Admin/OrderDetail",
            { orderId: orderId },
            function (res, status) {
                if (res != null && res != "undefined") {
                    $('#orderDetailModal').find('.modal-body').html(res);
                    $('#orderDetailModal').modal();
                }
            }
         );
    }
</script>

